<h1><%= @date.strftime("%B %Y") %></h1>

<div class="calendar-navigation">
  <%= link_to "Previous Month", root_path(date: @date.prev_month), class: "nav-button previous" %>
  <%= link_to "Next Month", root_path(date: @date.next_month), class: "nav-button next" %>
</div>

<div class="calendar-container">
  <div class="calendar-header">
    <% Date::DAYNAMES.each do |day| %>
      <div class="day-name"><%= day %></div>
    <% end %>
  </div>

  <ul class="calendar-grid">
    <% @days.each do |day| %>
      <li class="<%= 'today' if day == Date.today %>">
        <%= link_to day.day, calendar_path(id: Day.find_or_create_by(date: day).id, date: @date) %>
        <time datetime="<%= day %>"><%= day.day %></time>
        <%# Display any tasks or holidays here %>
        <% if day == Date.today %>
          <p>Today's tasks or holiday</p>
        <% else %>
          <p>No events</p>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
